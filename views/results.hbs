<!DOCTYPE html>
<html>
<head>
    <title>Sales Results</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1, h2 {
            margin-bottom: 15px;
            color: #333;
        }
        form {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        label {
            margin-right: 10px;
            color: #555;
        }
        input[type="text"] {
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 60%;
            max-width: 300px;
        }
        input[type="submit"] {
            cursor: pointer;
            padding: 8px 16px;
            font-size: 16px;
            background-color: #a0b0a0;
            color: white;
            border: none;
            border-radius: 4px;
        }
        hr {
            margin-bottom: 20px;
            border: none;
            border-top: 1px solid #ddd;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            background-color: #c1a6a6;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1);
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f2f2f2;
        }
        p {
            font-style: italic;
            color: #777;
        }
    </style>
</head>
<body>
    <h1>Sales Results</h1>

    <!-- Form to search by product line -->
    <form action="/api/sales/searchProductLine" method="GET">
        <label for="productLine">Search by Product Line:</label>
        <input type="text" id="productLine" name="productLine">
        <input type="submit" value="Search">
    </form>

    <hr>

    <!-- Display search results only when there are valid search results -->
    {{#if searchQuery}}
        <h2>Search Results for "{{searchQuery}}"</h2>

        {{#if sales.length}}
            <table>
                 <tr>
                <th>Invoice ID</th>
                <th>Branch</th>
                <th>City</th>
                <th>Customer Type</th>
                <th>Product Line</th>
                <th>Name</th>
                <th>Image</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Tax 5%</th>
                <th>Total</th>
                <th>Date</th>
                <th>Time</th>
                <th>Payment</th>
                <th>COGS</th>
                <th>Gross Income</th>
                <th>Rating</th>
            
                </tr>
            </thead>
            <tbody>
                {{#each sales}}
                    <tr>
                <td>{{this.[Invoice ID]}}</td>
                <td>{{this.Branch}}</td>
                <td>{{this.City}}</td>
                <td>{{this.[Customer type]}}</td>
                <td>{{this.[Product line]}}</td>
                <td>{{this.name}}</td>
                <td><img src="{{image}}" alt="Product Image"></td>
                <td>{{this.[Unit price]}}</td>
                <td>{{this.Quantity}}</td>
                <td>{{this.[Tax 5%]}}</td>
                <td>{{this.Total}}</td>
                <td>{{this.Date}}</td>
                <td>{{this.Time}}</td>
                <td>{{this.Payment}}</td>
                <td>{{this.cogs}}</td>
                <td>{{this.[gross income]}}</td>
                <td>{{this.Rating}}</td>
            </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
            <p>No results found.</p>
        {{/if}}
    {{/if}}
</body>
</html>
